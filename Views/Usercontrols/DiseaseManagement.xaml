<UserControl
    x:Class="disaster_management.Views.Usercontrols.DiseaseManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:disaster_management.Views.Usercontrols"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <Grid
            Width="250"
            HorizontalAlignment="Left"
            Background="#3393DF">
            <TextBlock
                Margin="10,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                Foreground="White"
                Text="QUẢN LÝ DỊCH BỆNH" />
        </Grid>

        <TabControl Grid.Row="1" Style="{StaticResource MahApps.Styles.TabControl.ColorPicker}">

            <!--  Quản Lý Dịch Bệnh  -->
            <TabItem Header="Quản Lý Dịch Bệnh">
                <Grid Margin="10,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1.2*" />
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Width="160"
                                VerticalAlignment="Center"
                                FontSize="14">
                                Tra cứu theo tên dịch:
                            </TextBlock>
                            <!--  Timf kieems  -->
                            <StackPanel
                                Margin="10,10,0,0"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">

                                <TextBox
                                    Width="190"
                                    Style="{StaticResource MahApps.Styles.TextBox}"
                                    Text="{Binding KeywordName}" />
                                <Button
                                    Width="90"
                                    Margin="5,0,0,0"
                                    Command="{Binding SearchNameCommand}"
                                    Content="Tìm Kiếm"
                                    FontSize="16"
                                    Style="{StaticResource MahApps.Styles.Button}" />
                                <Button
                                    Width="90"
                                    Margin="5,0,0,0"
                                    Command="{Binding LoadDiseasesCommand}"
                                    Content="Làm mới"
                                    FontSize="16"
                                    Style="{StaticResource MahApps.Styles.Button}" />
                            </StackPanel>
                        </StackPanel>

                        <GroupBox
                            Grid.Row="2"
                            Margin="0,20,0,0"
                            Header="Danh sách loại dịch bệnh: ">
                            <Grid VerticalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="50" />
                                </Grid.RowDefinitions>
                                <DataGrid
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="AliceBlue"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding Pagination.PagedItems}"
                                    SelectedItem="{Binding SelectedDisease}" />
                                <!--  phan trang  -->
                                <StackPanel
                                    Grid.Row="1"
                                    Height="40"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    Orientation="Horizontal">
                                    <Button
                                        Width="80"
                                        Margin="0,0,5,0"
                                        Command="{Binding MoveFirstCommand}"
                                        Content="Đầu" />
                                    <Button
                                        Width="80"
                                        Margin="5,0,5,0"
                                        Command="{Binding MovePreviousCommand}"
                                        Content="Trước" />
                                    <Button
                                        Width="80"
                                        Margin="5,0,5,0"
                                        Command="{Binding MoveNextCommand}"
                                        Content="Tiếp" />
                                    <Button
                                        Width="80"
                                        Margin="5,0,0,0"
                                        Command="{Binding MoveLastCommand}"
                                        Content="Cuối" />
                                </StackPanel>
                            </Grid>

                        </GroupBox>

                    </Grid>
                    <!--  END  Danh dách điểm trượt lỡ/ lũ quen  -->

                    <!--  Thao tác  -->
                    <Grid Grid.Column="1">
                        <StackPanel>
                            <!--  Timf kieems  -->
                            <!--<StackPanel
                                Margin="10,10,0,0"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">

                                <TextBox
                                    Width="190"
                                    Style="{StaticResource MahApps.Styles.TextBox}"
                                    Text="{Binding KeywordName}" />
                                <Button
                                    Width="90"
                                    Margin="5,0,0,0"
                                    Command="{Binding SearchNameCommand}"
                                    Content="Tìm Kiếm"
                                    FontSize="16"
                                    Style="{StaticResource MahApps.Styles.Button}" />
                            </StackPanel>-->
                            <!--  Thao tac  -->
                            <GroupBox Margin="10,70,0,0" Header="ĐIỀU CHỈNH DỮ LIỆU DỊCH BỆNH">
